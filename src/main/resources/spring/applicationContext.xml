<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- 加载配置文件 -->
	<bean
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="locations">
			<list>
				<value>classpath:rms-third.properties</value>
			</list>
		</property>
	</bean>

	<import resource="classpath:spring/applicationContext-servlet.xml"/>
	<!--<import resource="classpath:spring/applicationContext-redis.xml"/>-->
	<import resource="classpath:spring/applicationContext-mongdb.xml"/>
	<import resource="classpath:spring/applicationContext-mysql.xml"/>
	<import resource="classpath:spring/applicationContext-rms-third.xml"/>
	<import resource="classpath:spring/spring-timer.xml"/>
</beans>